// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

// FAQ Documents - the knowledge base entries
model Document {
  id        String   @id @default(cuid())
  title     String
  content   String   // The full text content
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  chunks DocumentChunk[]
}

// Chunked documents for RAG
model DocumentChunk {
  id         String   @id @default(cuid())
  documentId String
  content    String   // The chunk text
  chunkIndex Int      // Order of this chunk in the document
  createdAt  DateTime @default(now())

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
}

// Chat sessions
model ChatSession {
  id        String   @id @default(cuid())
  title     String?  // Optional title for the chat
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages Message[]
}

// Individual messages in a chat
model Message {
  id            String      @id @default(cuid())
  chatSessionId String
  role          String      // "user" or "assistant"
  content       String
  createdAt     DateTime    @default(now())

  chatSession ChatSession @relation(fields: [chatSessionId], references: [id], onDelete: Cascade)
}
